@model ProductApp.Models.Category
@{
    ViewData["Title"] = "EditCat";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center text-primary">Add Category</h1>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Category" asp-action="EditCat">
                        <div class="form-group">
                            <lable asp-for="Name">Category</lable>
                            <input type="hidden" asp-for="Cid" />
                            <input type="text" asp-for="Name" class="form-control" />

                        </div>
                        <div class="form-group">
                            <input type="submit" value="submit" class="btn btn-sm btn-outline-success float-md-none" />

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
