@model PagedList.IPagedList<ProductApp.Data.ProductView>
@using PagedList.Mvc
@using System.Web.Mvc.Html
@using System.Web
@{
    ViewData["Title"] = "Index";
}

<div class="container">

	<div class="row">
		<div class="col-5 offset-2">
			<h1 class="text-center text-primary">Categories</h1>
			<a class="btn btn-sm btn-success m-1" asp-controller="Product" asp-action="AddProduct">Add Product</a>
		</div>
		<table class="table table-bordered">
			<tr class="text-center">
				<th>Product ID</th>
				<th>Product Name</th>
				<th>Category ID</th>
				<th>Category</th>
				<th>Action</th>
			</tr>
			@foreach (var product in Model)
			{
				
				if (product != null)
				{
					<tr class="text-center">
						<td>@product.Productid</td>
						
						<td>@product.ProductName</td>
						<td>@product.CatId</td>
						<td>@product.CatName</td>
					
					<td>
						<a class="btn btn-sm btn-warning" asp-controller="Product" asp-action="Editproduct" asp-route-id="@product.Productid">Edit</a>
						<a class="btn btn-sm btn-danger" asp-controller="Product" asp-action="Deleteproduct" asp-route-id="@product.Productid">Delete</a>

					</td>
				</tr>
				}
			}
		</table>
		
	</div>

